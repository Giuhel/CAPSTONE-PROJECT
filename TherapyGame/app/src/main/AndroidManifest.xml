<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.therapygame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".actividades.AcercaDeActivity"></activity>
        <activity android:name=".actividades.AjustesTemaActivity" />
        <activity android:name=".actividades.Nivel2Activity" />
        <activity android:name=".actividades.ResultadoJuegoActivity" />
        <activity
            android:name=".actividades.AjustesActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".actividades.Nivel1Activity" />
        <activity
            android:name=".actividades.ContendorInstruccionesActivity"
            android:label="@string/title_activity_contendor_instrucciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".actividades.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
    </application>

</manifest>